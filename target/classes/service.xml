<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="transactionmanager" class="org.academiadecodigo.bootcamp.persistence.jpa.JpaTransactionManager">
        <constructor-arg ref="sessionManager"/>
    </bean>

    <bean id="bootcampService" class="org.academiadecodigo.bootcamp.service.bootcamp.BootcampServiceImpl">
        <constructor-arg index="0" ref="jpaBootcampDao"/>
    </bean>

    <bean id="userService" class="org.academiadecodigo.bootcamp.service.user.UserServiceImpl">
        <constructor-arg index="0" ref="jpaUserDao"/>
    </bean>
</beans>